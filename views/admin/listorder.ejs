<html>

<head>
  <link href="/css/styles.css" type="text/css" rel="stylesheet" />
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
   <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
   <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
   <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</head>

<body class="container">
  <%- include('./_menu.ejs') %>
  <%  if (orders) { %>
  <div>
    <h2>&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;DANH SÁCH ĐƠN HÀNG</h2>
    <table style="position:absolute; left:20px; top:350px" class="datatableb" border="1">
      <tr class="datatableb">
        <th style="font-size: small;" >MÃ TÀI KHOẢN</th>
        <th style="font-size: small;">NGÀY TẠO</th>
        <th style="font-size: small;">TÊN NGƯỜI DÙNG</th>
        <th style="font-size: small;">SỐ ĐIỆN THOẠI</th>
        <th style="font-size: small;">TỔNG</th>
        <th style="font-size: small;">TÌNH TRẠNG</th>
        <th style="font-size: small;">HÀNH ĐỘNG</th>
      </tr>
      <%  for (var item of orders) { %>
      <tr class="datatable" onclick="window.location='./listorder?id=<%=item._id%>'">
        <th style="font-size: small;"><%=item._id%></th>
        <td style="font-size: small;"><%=new Date(item.cdate).toLocaleString()%></td>
        <td style="font-size: small;"><%=item.customer.name%></td>
        <td style="font-size: small;"><%=item.customer.phone%></td>
        <td style="font-size: small;"><%=item.total%></td>
        <td style="font-size: small;"><%=item.status%></td>
        <h1></h1>
        <td>
          <%  if (item.status == 'PENDING') {  %>
          <a href="./updatestatus?status=APPROVED&id=<%=item._id%>">APPROVE</a>
          ||
          <a href="./updatestatus?status=CANCELED&id=<%=item._id%>">CANCEL</a>
          <%  } %>
        </td>
      </tr>
      <%  } %>
    </table>
  </div>
  <%  } %>
  <%  if (order) { %>
  <div class="align-center">
    <h2 style=" position:absolute; left:1000px; top:280px">CHI TIẾT GIỎ HÀNG</h2>
    <table class="datatableo" border="1">
      <tr class="datatableo">
        <th>ID SẢN PHẨM</th>
        <th>TÊN SẢN PHẨM</th>
        <th>ẢNH</th>
        <th>GIÁ</th>
        <th>SỐ LƯỢNG</th>
        <th>TỔNG</th>
      </tr>
      <%  for (var [i, item] of order.items.entries()) {  %>
      <tr class="datatableo">
        <td><%=item.product._id%></td>
        <td><%=item.product.name%></td>
        <td><img src="data:image/jpg;base64,<%=item.product.image%>" width="40" height="40" /></td>
        <td><%=item.product.price%></td>
        <td><%=item.quantity%></td>
        <td><%=item.product.price * item.quantity%></td>
      </tr>
      <%  } %>
    </table>
  </div>
  <%  } %>
</body>

</html>