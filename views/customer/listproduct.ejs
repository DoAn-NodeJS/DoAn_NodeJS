<body class="customer">
  <%- include('./_menu.ejs') %>
  <%- include('./_inform.ejs') %>
  <div class="text-center">
    <h2 class="text-center">LIST PRODUCTS</h2>
    <%  for (var prod of prods) { %>
    <div class="inline">
      <figure>
        <a href="./details?id=<%=prod._id%>"><img src="data:image/jpg;base64,<%=prod.image%>" width="200px" height="200px" /></a>
        <figcaption class="text-center"><%=prod.name%><br />Price: <%=prod.price%></figcaption>
      </figure>
    </div>
    <%  } %>
  </div>
</body>

